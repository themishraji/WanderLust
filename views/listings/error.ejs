<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="alert alert-danger col-6 offset-3" role="alert">
    <h4 class="alert-heading"> <%= message %> </h4>
    <% if (typeof err !== 'undefined' && err) { %> <!-- Check if err is defined -->
      <p><%= err.stack %></p> <!-- Display error stack -->
    <% } %>
  </div>
</div>
