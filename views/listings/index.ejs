<% layout("/layouts/boilerplate") %>
<h3>Wanderlust</h3>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a style="color:black !important" href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-class">
      <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %> <br> </b> &#8377;
          <% if (listing.price) { %>
          <%= listing.price.toLocaleString("en-IN") %>
          <% } else { %>
          Price not available
          <% } %>
          / night
          <br>
        </p>
      </div>
    </div>
  </a> <!-- Move the closing </a> tag here -->
  <% } %>
</div>
